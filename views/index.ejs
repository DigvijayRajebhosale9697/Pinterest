<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center px-4">
    <div
      class="w-full max-w-md lg:max-w-[24vw] h-auto bg-white px-6 py-8 md:px-10 md:py-10 rounded-[20px] md:rounded-[30px] shadow-lg">
      <img src="/images/Pin.png" alt="Pinterest Logo" id="Login_IMG" class="w-16 h-28 mx-auto mb-4">
      <h1 class="text-2xl md:text-3xl leading-none tracking-tighter font-medium capitalize text-center my-3">
        Welcome To Pinterest
      </h1>
      <form action="/login" method="post" class="space-y-3">
        <input class="border-2 rounded-md w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-md w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <a class="text-sm font-medium inline-block mt-1" href="#">Forgot Password?</a>
        <input class="w-full px-3 py-2 bg-red-600 rounded-full text-white font-semibold cursor-pointer" type="submit"
          value="Login">
        <p class="text-xs font-medium text-center text-zinc-500 mt-2">
          By continuing, you agree to Pinterest's <a href="#" class="underline text-xs">Terms of Service</a> and
          acknowledge you've read our <a href="#" class="underline text-xs">Privacy Policy</a>.
        </p>
      </form>
      <a class="block mt-5 text-center text-sm text-zinc-700" href="/register">Don't Have an Account?</a>
    </div>
  </div>
  <% include ./partials/footer.ejs %>