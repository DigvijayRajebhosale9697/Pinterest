<% include ./partials/header.ejs %>

<div class="flex flex-col min-h-screen bg-zinc-800 text-white">
    <div class="flex-grow flex items-center justify-center">
        <div class="max-w-screen-lg w-full md:w-96 px-4 bg-black py-10 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-center mb-4">Contact Us</h1>
            <p class="text-gray-400 text-center">Feel free to reach out if you have any questions or feedback.</p>
            <form class="flex flex-col items-center gap-4 mt-6 w-full">
